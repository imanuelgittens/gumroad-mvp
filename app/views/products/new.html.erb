<div class="container">
    <div class="jumbotron">
        <h2>Add Product<h2>
    </div>
    <section>
    <%= form_with scope: :product, local: true do |form| %>
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter PDF Title" %>
    </div>
    <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", placeholder: "Enter Description" %>
    </div>
    <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, class: "form-control", placeholder: "Enter Price" %>
    </div>
    <div class="form-group">
    <%= form.label :file %>
        <div class="custom-file">
            <%= form.file_field :file, class: "custom-file-input"%>
            
            <%= form.label :file, class: "custom-file-label" %>
        </div>
    </div>
  <div class="form-group">
    <%= form.submit "Add Product", class: "btn btn-primary" %>
  </div>
<% end %>
    </section>
</div>



